<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Quest Store</title>
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/navbar.css">
    <link rel="stylesheet" href="css/content.css">
    <link rel="stylesheet" href="css/page-footer.css">
    <link href="https://fonts.googleapis.com/css?family=Merienda:700|Paprika" rel="stylesheet">
</head>

<body>
    <nav class="navbar">
        <div class="navbar-store">
        <img class="navbar-logo" src="images/logo.png" alt="Logo Codecool">
        Quest Store
        </div>
        <ul class="navbar-list">
        <li>
            <a href="mentor/profile">
            Profile
            </a>
        </li>
        <li>
            <a href="mentor/codecoolers">
            Codecoolers
            </a>
        </li>
        <li>
            <a href="mentor/quests">
            Quests
            </a>
        </li>
        <li>
            <a href="mentor/artifacts">
            Artifacts
            </a>
        </li>
        <li>
            <a href="login">
                <img class="navbar-logout" src="images/logout.png" alt="Logout" title="Press to logout">
            </a>
        </li>
        </ul>
    </nav>

    <section class="content-section">
        <div class="div-content-section">
            <h1>{{ student.getFirstName() student.getLastName() }}artifacts</h1>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Cost</th>
                        <th>Category</th>
                        <th>Purchase date</th>
                        <th>Mark date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for artifact in artifacts %}
                    <tr>
                        <td>{{ artifact.getName() }}</td>
                        <td>{{ artifact.getCost() }}</td>
                        <td>{{ artifact.getCategory() }}</td>
                        <td>{{ artifact.getPurchaseDate() }}</td>
                        <td>{{ artifact.getMarkDate() }}</td>
                        <td></td>
                        {% if not artifact.getMarkDate() %}
                        <td>
                            <a href="{{ 'mentor/students/' ~ student.getId() ~ '/artifacts/' ~ artifact.getId() }}">
                            <img class="table-img" src="images/edit.png" alt="Mark" title="Mark artifact">
                            </a>
                        </td>
                        {% endif %}
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <footer class="page-footer">
        &#169; Copyright a&#38;a 2018
    </footer>

</body>
</html>